{{!
    @template theme_foundation/partials/navbardrawerblocks

    Drawer block navbar controls.

    Context variables required for this template:
    * hasdrawerblocks - Are there drawer blocks?
    * ceblocks - Block markup.

    Example context (json):
    {
        "hasdrawerblocks": true,
        "fa": false,
        "fav": true,
        "favi": false
    }
}}
{{#hasdrawerblocks}}
<div class="navbar-nav">
    <button id="drawer" class="btn btn-link nav-link" type="button" aria-controls="blocks-drawer">
        <span id="drawerclose" class="{{#fa}}fa fa-hand-o-left{{/fa}}{{#fav}}far fa-hand-point-left{{/fav}}{{#favi}}fa-regular fa-hand-point-left{{/favi}}{{#drawerclosed}} d-none{{/drawerclosed}}" aria-hidden="{{#drawerclosed}}true{{/drawerclosed}}{{^drawerclosed}}false{{/drawerclosed}}" aria-label="{{#str}}closedrawer, theme_foundation{{/str}}"></span>
        <span id="draweropen" class="{{#fa}}fa fa-hand-o-right{{/fa}}{{#fav}}far fa-hand-point-right{{/fav}}{{#favi}}fa-regular fa-hand-point-right{{/favi}}{{^drawerclosed}} d-none{{/drawerclosed}}" aria-hidden="{{^drawerclosed}}true{{/drawerclosed}}{{#drawerclosed}}false{{/drawerclosed}}" aria-label="{{#str}}opendrawer, theme_foundation{{/str}}"></span>
    </button>
</div>
{{/hasdrawerblocks}}
