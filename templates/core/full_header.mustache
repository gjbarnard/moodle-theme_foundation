{{!
    @template core/full_header

    This template renders the header.

    Example context (json):
    {
        "breadcrumb": "navbar_if_available",
        "courseheader": "course_header_html",
        "courseimage": "url",
        "contextheader": "context_header_html",
        "hasbreadcrumb": false,
        "settingsmenu": "settings_html"
    }
}}
{{#courseimage}}
<style type="text/css" media="screen">
    /* <![CDATA[ */
    #page-header {
        background-image: url("{{courseimage}}");
    }
    /* ]]> */
</style>
{{/courseimage}}
<header id="page-header" class="row{{#courseimage}} hascourseimage{{/courseimage}}">
    <div class="page-header-background-image-overlay w-100">
        <div class="card w-100 ps-3 pe-3{{^contextheader}} border-0 bg-transparent{{/contextheader}}{{#contextheader}} mb-2{{/contextheader}}">
            <div class="card-body{{^contextheader}} p-2{{/contextheader}}">
                <div class="d-sm-flex align-items-center pageheadingtop">
                    {{#contextheader}}
                    <div class="me-auto">
                        {{{contextheader}}}
                    </div>
                    {{/contextheader}}
                    <div class="header-actions-container flex-shrink-0" data-region="header-actions-container">
                        {{#headeractions}}
                            <div class="header-action ms-2">{{{.}}}</div>
                        {{/headeractions}}
                    </div>
                </div>
                <div class="d-flex flex-wrap pageheadingbottom">
                    {{#hasbreadcrumb}}
                    <div id="page-navbar">
                        {{{breadcrumb}}}
                    </div>
                    {{/hasbreadcrumb}}
                    <div class="ms-auto d-flex pageheadingbutton">
                        {{{pageheadingbutton}}}
                    </div>
                    <div id="course-header">
                        {{{courseheader}}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>
